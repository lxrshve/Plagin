{
    "compilerOptions": {
      "module": "commonjs",        // Система модулей (для Node.js)
      "target": "ES2020",          // В какой JavaScript компилировать
      "outDir": "out",             // КУДА класть результат (папка out/)
      "lib": ["ES2020"],           // Какие библиотеки доступны
      "sourceMap": true,           // Создавать ли карты для отладки
      "rootDir": "src",            // ОТКУДА брать исходники (папка src/)
      "strict": true               // Строгая проверка типов
    }
  }